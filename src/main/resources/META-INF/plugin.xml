<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->

<idea-plugin>

    <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
    <id>org.armadillo.core</id>

    <!-- Text to display as name on Preferences/Settings | Plugin page -->
    <name>Armadillo</name>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <!-- Text to display as description on Preferences/Settings | Plugin page -->
    <description>
        <![CDATA[
      Make debugging a little bit easier and have the below tools in your possession.
      <ul>
        <li>Save debugger variables & stack frame into a session</li>
        <li>Import/Export sessions</li>
        <li>Diff two sessions</li>
        <li>View sessions saved on a single line</li>
      </ul>
    ]]>
    </description>
    <change-notes>
        <![CDATA[
      <ul>
        <li><b>1.0.0</b>First Release</li>
      </ul>
    ]]>
    </change-notes>

    <!-- Text to display as company information on Preferences/Settings | Plugin page -->
    <vendor>Armadillo</vendor>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id=" Armadillo" secondary="true" icon="SdkIcons.SNAP_ICON" anchor="bottom"
                    factoryClass="org.armadillo.core.DebugWindowProvider"/>
        <applicationService serviceImplementation="org.armadillo.core.services.PersistencyService" serviceInterface="org.armadillo.core.services.PersistencyService"/>
    </extensions>
    <projectListeners>
        <listener
                class="org.armadillo.core.listeners.SessionStartedListener"
                topic="com.intellij.debugger.impl.DebuggerManagerListener"/>
        <listener
                class="org.armadillo.core.listeners.IconGutterListener"
                topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </projectListeners>
    <actions>
        <action id="saveNodeAction" class="org.armadillo.core.actions.SaveNodeAction" text="Save in Armadillo" description="Save debug session" icon="SdkIcons.SNAP_ICON">
            <add-to-group group-id="XDebugger.ValueGroup" anchor="after" relative-to-action="XDebugger.CopyName"/>
        </action>
    </actions>
</idea-plugin>
